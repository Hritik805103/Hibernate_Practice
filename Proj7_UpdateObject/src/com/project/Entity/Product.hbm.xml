<?xml version="1.0" encoding="UTF-8"?>

<!--  import DTD rules -->
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
    
    <hibernate-mapping>
    
    <class name="com.project.Entity.Products" table="product" dynamic-insert="true">
  		  <id name="pid" column="pid"></id>
  		  
  		  <!-- If the values of both attribute name and column are exact same then we can remove the column attribute -->
 		<!-- <property name="pname" column="pname"></property> -->
 		  <property name="pname"></property>
    	  <property name="price" column="price"></property>
    	  <property name="qty" column="qty"></property>
    </class>
    
    </hibernate-mapping>